#!/bin/bash

# CASA pipeline version switcher

ver=$1

cd $HOME

# delete current symlink

rm -f casa
if [[ $ver -eq 4 ]] 
then
    ln -s ~/data/casa453pipe casa
    CASA_VERSION=4.5.3
    export CASA_VERSION
    rm .casa
    ln -s ~/.casa453 .casa
elif [[ $ver -eq 5 ]] 
then
    ln -s ~/data/casa561pipe casa
    CASA_VERSION=5.6.1
    export CASA_VERSION
    rm .casa
    ln -s ~/.casa561 .casa
elif [[ $ver -eq 6 ]] 
then
    ln -s ~/data/casa621pipe casa
    CASA_VERSION=6.2.1
    export CASA_VERSION
    rm .casa
    ln -s ~/.casa621 .casa
fi

cd $OLDPWD